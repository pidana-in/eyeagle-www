---
import HeroSection from "../components/NewHome/HeroSection.astro";
import Moments from "../components/NewHome/Moments.astro";
import Membership from "../components/NewHome/Membership.astro";
import MainLayout from "../layouts/MainLayout.astro";
import ProcessSection from "../components/NewHome/ProcessSection.astro";
import StepsSection from "../components/NewHome/StepsSection.astro";
// import FAQs from "../components/NewHome/FAQs.astro";
import CTA from "../components/NewHome/CTA.astro";
import {
  heroContent,
  heroData,
  membershipItems,
  momentFeatures,
  momentData,
  appSection,
  appData,
  guardianData,
  kitFeatures,
  bathroomKit,
  processData,
  stepsContent,
  stepsData,
  faqsData,
  testimonialData,
  ctaSection,
} from "../components/constants/newHome";
import EyeagleTab from "../components/NewHome/EyeagleTab.astro";
