  <StepsSection stepsContent={stepsContent} stepsData={stepsData} />
  <ProcessSection processData={processData} />
  <Membership items={membershipItems} />
  <!-- <FAQs faqsData={faqsData} /> -->
  <Testimonials testimonialData={testimonialData} />
  <CTA ctaSection={ctaSection} />
