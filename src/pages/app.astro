---
import MainLayout from "../layouts/MainLayout.astro";
import HeroImage from "../assets/NewApp/Hero.png";
import AppInfograph from "../assets/NewApp/AppInfograph.png";
import { Image } from "astro:assets";

const metaTitle = "Advanced Elderly Fall Alert Devices - EyEagle Solutions";
const metaDesc =
  "Explore EyEagle’s innovative solutions for elderly safety. From fall alert devices to emergency alarm systems, protect your loved ones today.";
---

<MainLayout title={metaTitle} desc={metaDesc}>
  <section class="my-[60px]">
    <div class="relative w-full">

      <!-- Background Hero -->
      <Image 
        src={HeroImage} 
        alt="Hero app" 
        class="w-full h-auto"
      />

      <!-- Foreground Content -->
      <div class="absolute inset-0 flex flex-col items-center text-center px-4">

        <!-- Text Section -->
        <div class="w-full max-w-3xl mt-6 md:mt-12 text-[#000000]">
          <h1 class="text-3xl md:text-6xl font-bold leading-tight md:leading-[1.1]">
            Feel safer.<br />Stay connected.
          </h1>

          <p class="text-base md:text-lg font-normal mt-4 md:mt-6">
            EyEagle helps families build private “Nests” to check in, share SOS access,
            and get smart alerts—without overwhelming anyone.
          </p>

          <button class="mt-6 md:mt-8 bg-[#CC0000] text-white px-6 py-3 rounded-full text-lg font-medium">
            Get the app
          </button>
        </div>

        <!-- Infograph Image -->
        <Image 
          src={AppInfograph} 
          alt="App infographic"
          class="mt-20 w-[95%] md:w-[68%]"
        />
      </div>
    </div>
  </section>
</MainLayout>


