---
import { Image } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import contactLogo1 from "../assets/Common/contactLogo1.png";
import contactLogo2 from "../assets/Common/contactLogo2.png";
import contactLogo3 from "../assets/Common/contactLogo3.png";

const metaTitle="Reach Out for Queries & Support - Contact EyEagle";
const metaDesc="Need help or have questions about EyEagleâ€™s emergency alarm systems? Contact us today for reliable customer support and assistance.";
---

<MainLayout title="Contact Us" title={metaTitle} desc={metaDesc}>
    <section class="bg-[#F6F4F2] lg:px-[56px] font-sans-instrument px-4 lg:py-[120px] grid max-lg:gap-10 py-10 lg:pt-40 pt-[82px]">
        <div class="text-center">
        <h1 class="font-medium text-lg leading-[21px] text-[#CC0000] mb-2">CONTACT US</h1>
        <h3 class="font-medium lg:text-[72px] lg:leading-[79px] text-[40px] leading-[44px] lg:mb-10 mb-5">Get in Touch <br/> With Our <span class="text-[#CC0000]">Team</span></h3>
        <p class="font-medium text-[32px] lg:leading-7 leading-[44px] lg:mb-20 mb-[60px]">For inquiries, support, or subscription-related questions</p>
        </div>
       <div class="grid lg:grid-cols-2 justify-center items-center gap-[60px]">
        <div class="border-[#0000001A] p-6 rounded-[10px] border">
          <Image src={contactLogo1} alt={'contactLogo1'} class="pb-8"/>
          <h3 class="font-medium text-2xl leading-6 pb-5">Merchant Legal entity name</h3>
          <p class="font-medium text-lg lg:leading-[21px] leading-[40px]">PIDANA TECHNOLOGIES PRIVATE LIMITED</p>
        </div>
        <div class="border-[#0000001A] p-6 rounded-[10px] border">
          <Image src={contactLogo2} alt={'contactLogo1'} class="pb-8"/>
          <h3 class="font-medium text-2xl leading-6 pb-5">Support Email</h3>
          <a href="mailto:contact.eyeagle@gmail.com" class="font-medium text-lg text-[#CC0000] leading-[21px] hover:cursor-pointer hover:underline">contact.eyeagle@gmail.com</a>
        </div>
        <div class="border-[#0000001A] p-6 rounded-[10px] border">
          <Image src={contactLogo3} alt={'contactLogo1'} class="pb-8"/>
          <h3 class="font-medium text-2xl leading-6 pb-5">Registered Address</h3>
          <p class="font-medium pb-8 text-lg lg:leading-[21px] leading-[40px]">A-101, DSR ULTIMA, HARALUR ROAD, BANGALORE, Karnataka
            PIN: 560102</p>
            <a href="https://maps.app.goo.gl/CTSoBpsFi6zbqWkP9" class="text-base leading-7 font-medium px-3 py-3 border-2 rounded-[8px]">GET DIRECTION</a>
        </div>
        <div class="border-[#0000001A] p-6 rounded-[10px] border">
          <Image src={contactLogo3} alt={'contactLogo1'} class="pb-8"/>
          <h3 class="font-medium text-2xl leading-6 pb-5">Operational Address</h3>
          <p class="font-medium pb-8 text-lg lg:leading-[21px] leading-[40px]">A-101, DSR ULTIMA, HARALUR ROAD, BANGALORE, Karnataka
            PIN: 560102</p>
            <a href="https://maps.app.goo.gl/CTSoBpsFi6zbqWkP9" class="text-base leading-7 font-medium px-3 py-3 border-2 rounded-[8px]">GET DIRECTION</a>
        </div>
       </div>
    </section>
</MainLayout>
<style>
    .invalid-feedback,
    .empty-feedback {
      display: none;
    }
  
    .was-validated :placeholder-shown:invalid ~ .empty-feedback {
      display: block;
    }
  
    .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
      display: block;
    }
  
    .is-invalid,
    .was-validated :invalid {
      border-color: #dc3545;
    }
  </style>
  
  <script is:inline>
     const form = document.getElementById("form");
  
    form.addEventListener("submit", function (e) {
      e.preventDefault();
      form.classList.add("was-validated");
      if (!form.checkValidity()) {
        form.querySelectorAll(":invalid")[0].focus();
        return;
      }
      const formData = new FormData(form);
      const object = Object.fromEntries(formData);
      location.href = `mailto:${object?.replyto}?subject=Request to Connect - ${object.name}&body=Hi,%0D%0A%0D%0A${object?.message}%0D%0A%0D%0ARegards,%0D%0A${object?.name}%0D%0A${object?.phone}%0D%0A${object?.email}`;
      form.reset();
      form.classList.remove("was-validated");   
    });
  </script>