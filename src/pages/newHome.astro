---
import HeroSection from "../components/NewHome/HeroSection.astro";
import Moments from "../components/NewHome/Moments.astro";
import SafetySteps from "../components/NewHome/SafetySteps.astro";
import EyeagleApp from "../components/NewHome/EyeagleApp.astro";
import GuardianX from "../components/NewHome/GuardianX.astro";
import MainLayout from "../layouts/MainLayout.astro";
import BathroomKit from "../components/NewHome/BathroomKit.astro";
import ProcessSection from "../components/NewHome/ProcessSection.astro";
import StepsSection from "../components/NewHome/StepsSection.astro";
import FAQs from "../components/NewHome/FAQs.astro";
import CTA from "../components/NewHome/CTA.astro";
import {
  heroContent,
  ctaButtons,
  featureTicks,
  heroData,
  principles,
  momentFeatures,
  momentData,
  appSection,
  appData,
  guardianData,
  kitFeatures,
  bathroomKit,
  processData,
  ProcessImage,
  stepsContent,
  stepsData,
  faqsData,
  ctaSection,
} from "../components/constants/newHome";
import EyeagleTab from "../components/NewHome/EyeagleTab.astro";

const metaTitle = "Advanced Elderly Fall Alert Devices - EyEagle Solutions";
const metaDesc =
  "Explore EyEagleâ€™s innovative solutions for elderly safety. From fall alert devices to emergency alarm systems, protect your loved ones today.";
---

<MainLayout title={metaTitle} desc={metaDesc}>
  <HeroSection
    heroContent={heroContent}
    ctaButtons={ctaButtons}
    featureTicks={featureTicks}
    heroData={heroData}
  />
  <SafetySteps principles={principles} />
  <Moments momentData={momentData} momentFeatures={momentFeatures} />
  <EyeagleTab
    appSection={appSection}
    appData={appData}
    guardianData={guardianData}
    kitFeatures={kitFeatures}
    bathroomKit={bathroomKit}
  />
  <ProcessSection processData={processData} processImage={ProcessImage} />
  <StepsSection stepsContent={stepsContent} stepsData={stepsData} />
  <FAQs faqsData={faqsData} />
  <CTA ctaSection={ctaSection} />
</MainLayout>
