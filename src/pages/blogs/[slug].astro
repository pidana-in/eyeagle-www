  <section
    class="relative w-full overflow-hidden font-sans-instrument lg:py-12"
  >
    <img
      src={blog.data.img}
      alt={blog.data.title}
      class="object-cover w-full h-full"
    />
  </section>

  <article
    class="flex flex-col lg:flex-row px-6 md:px-10 lg:px-20 py-16 md:py-24 lg:py-32 font-instrument-sans gap-10 md:gap-16 lg:gap-32"
  >
