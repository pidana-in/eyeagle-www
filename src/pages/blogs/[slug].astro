  class="prose prose-lg prose-headings:font-sans-instrument tracking-wide text-black marker:text-black md:text-lg max-w-full lg:max-w-5xl font-barlow
         prose-h1:text-2xl lg:prose-h1:text-5xl prose-h1:leading-tight lg:prose-h1:leading-[1.2]
         prose-h2:leading-snug lg:prose-h2:leading-normal
         prose-headings:text-xl lg:prose-headings:text-4xl"
>
