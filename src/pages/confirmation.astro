      }

      .subtitle {
        font-size: 14px;
        text-align: center;
        margin-bottom: 20px;
        font-family: "Georgia", serif;
      }

      .section__title {
        font-size: 18px;
        color: #cc0000;
        margin: 15px auto 8px;
        width: 100%;
        max-width: 90%;
      }

      .order__table {
        width: 100%;
        max-width: 90%;
        margin: auto;
        border-collapse: collapse;
        border: 2px solid #ccc;
        font-size: 12px;
      }

      .order__table th,
      .order__table td {
        border: 2px solid #ccc;
        padding: 6px;
        text-align: center;
      }

      .order__table tr td {
        height: 80px;
      }

      .order__table th {
        font-size: 14px;
      }

      .billing__textarea-container {
        display: flex;
        justify-content: center;
        margin-top: 8px;
      }

      .billing__textarea {
        width: 100%;
        max-width: 90%;
        height: 80px;
        border: 2px solid #ccc;
        padding: 6px;
        font-size: 12px;
        outline: none;
      }

      .contact {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #ececec;
        padding: 10px;
        margin: 15px auto;
        width: 90%;
        border-radius: 10px;
        font-size: 12px;
      }

      .contact p {
        margin: 3px 0;
        text-align: center;
      }

      .contact__email {
        color: #cc0000;
      }

      .icons {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 15px;
        gap: 10px;
      }

      .icons__section {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 6px;
      }

      .icons__title {
        font-size: 12px;
        margin-bottom: 3px;
      }

      .icons__group {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .divider {
        height: 20px;
        border-left: 1px solid black;
      }

      .icon {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: black;
        color: white;
        width: 25px;
        height: 25px;
        border-radius: 50%;
        font-size: 12px;
        cursor: pointer;
      }

      .footer__copyright {
        text-align: center;
        font-size: 10px;
        margin-top: 15px;
        line-height: 1.3;
      }

      .footer__ribbon {
        background-color: #cc0000;
        height: 5px;
        margin-top: 15px;
      }

      @media (min-width: 768px) {
        .message__input {
          width: 150px;
        }

        .title--large {
          font-size: 28px;
        }

        .subtitle {
