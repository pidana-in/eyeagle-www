---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type HeroContent = {
  heading: string[];
  description: string;
};

type HeroData = {
  img: ImageMetadata;
};

interface Props {
  heroContent: HeroContent;
  heroData: HeroData;
}

const { heroContent, heroData } = Astro.props as Props;
---

<section class="py-16 lg:pt-[200px]">
  <div class="max-w-[960px] justify-self-center text-center">
    <h1 class="text-4xl md:text-7xl font-bold leading-[80px] px-16">
      {heroContent.heading[0]}
      <span class="text-[#CC0000]">{heroContent.heading[1]}</span>
      {heroContent.heading[2]}
      <span class="text-[#CC0000]">{heroContent.heading[3]}</span>
    </h1>
    <p class="mt-[60px] text-gray-600 text-lg">
      {heroContent.description}
    </p>
  </div>
  <div class="mt-16">
    <Image
      src={heroData.img}
      alt="Elderly person fallen at home"
      class="w-full h-[594px]"
      loading="eager"
    />
  </div>
</section>
