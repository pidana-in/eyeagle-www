---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type HeroContent = {
  heading: string[];
  description: string;
};

type CTAButton = {
  label: string;
  href: string;
  variant?: "outline" | "solid";
};

type HeroData = {
  img1: ImageMetadata;
  img2: ImageMetadata;
};

interface Props {
  heroContent: HeroContent;
  ctaButtons: CTAButton[];
  featureTicks: string[];
  heroData: HeroData;
}

const { heroContent, ctaButtons, featureTicks, heroData } =
  Astro.props as Props;
---

<section class="bg-white py-16 lg:py-20 px-4 xl:container font-sans-instrument">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-5">
    <div
      class="flex items-center justify-center lg:justify-start lg:pl-[120px]"
    >
      <div class="max-w-[570px] text-center lg:text-left">
        <h1
          class="text-5xl lg:text-7xl font-bold leading-tight lg:leading-[80px]"
        >
          {heroContent.heading[0]}<br />
          {heroContent.heading[1]}<br />
          {heroContent.heading[2]}
        </h1>

        <p class="mt-6 lg:mt-10 text-base sm:text-lg font-normal leading-7">
          {heroContent.description}
        </p>
        <div
          class="mt-8 lg:mt-10 flex flex-col sm:flex-row items-center gap-4 justify-center lg:justify-start"
        >
          {
            ctaButtons.map((btn) => (
              <a
                href={btn.href}
                target="_blank"
                rel="noopener noreferrer"
                class={`inline-block rounded-full px-8 py-3 font-semibold transition
                ${
                  btn.variant === "outline"
                    ? "border border-gray-400 hover:bg-gray-50"
                    : "bg-[#CC0000] text-white hover:bg-red-700"
                }`}
              >
                {btn.label}
              </a>
            ))
          }
        </div>
        <div
          class="mt-10 lg:mt-[60px] space-y-3 flex flex-col items-center lg:items-start"
        >
          {
            featureTicks.map((text) => (
              <div class="flex items-center gap-3 text-base font-medium text-[#15803D]">
                <Image src={heroData.img2} alt="Check icon" class="w-4 h-4" />
                <span>{text}</span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
    <div class="flex justify-center lg:justify-end">
      <Image
        src={heroData.img1}
        alt="Family standing together at home"
        class="w-full max-w-[420px] sm:max-w-[520px] lg:w-[690px] h-auto lg:h-[860px] object-cover rounded-xl lg:rounded-none"
        loading="eager"
      />
    </div>
  </div>
</section>
