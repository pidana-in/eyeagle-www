---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type HeroContent = {
  heading: string[];
  description: string;
};

type HeroData = {
  img: ImageMetadata;
};

interface Props {
  heroContent: HeroContent;
  heroData: HeroData;
}

const { heroContent, heroData } = Astro.props as Props;
---

<section class="py-12 md:py-16 lg:pt-[200px]">
  <div class="max-w-[960px] mx-auto text-center">
    <h1
      class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-bold leading-tight md:leading-[80px]"
    >
      {heroContent.heading[0]}
      <span class="text-[#CC0000]">{heroContent.heading[1]}</span>
      {heroContent.heading[2]}
      <span class="text-[#CC0000]">{heroContent.heading[3]}</span>
    </h1>
    <p
      class="mt-6 md:mt-10 lg:mt-[60px] text-gray-600 text-base md:text-lg"
    >
      {heroContent.description}
    </p>
  </div>
  <div class="mt-10 md:mt-16">
    <Image
      src={heroData.img}
      alt="Elderly person fallen at home"
      class="w-full h-auto md:h-[500px] lg:h-[594px] object-cover"
      loading="eager"
    />
  </div>
</section>
