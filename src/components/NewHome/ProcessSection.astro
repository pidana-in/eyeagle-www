---
import { Image } from "astro:assets";

type ProcessItem = {
  step: number;
  title: string;
  description: string;
  image: ImageMetadata;
};

type Process = {
  title: string;
  items: ProcessItem[];
};

interface Props {
  processData: Process;
}

const { processData } = Astro.props as Props;
---

<section class="bg-[#111827] text-white py-14 md:py-40">
  <div class="mx-auto w-full max-w-7xl px-6 lg:px-8">
    <div class="text-center max-w-5xl mx-auto">
      <h2 class="text-2xl sm:text-3xl md:text-[44px] font-bold leading-tight">
        {processData.title}
      </h2>
    </div>
    <div
      class="mt-10 md:mt-[120px] flex flex-col md:flex-row gap-12 md:gap-[72px] items-start justify-center"
    >
      {
        processData.items.map((card, index) => (
          <div class="relative mx-auto w-full md:max-w-[380px]">
            <div class="relative rounded-xl overflow-hidden">
              <Image
                src={card.image}
                alt={card.title}
                class="w-full h-auto object-cover"
              />
              <div class="absolute top-3 left-3 w-8 h-8 md:w-9 md:h-9 rounded-full bg-[#CC0000] text-white text-xs md:text-sm font-semibold flex items-center justify-center shadow-md">
                {card.step}
              </div>
            </div>
            <div class="mt-6 md:mt-10">
              <h3 class="text-base md:text-xl font-bold">{card.title}</h3>
              <p class="text-sm md:text-base text-neutral-200 mt-3 md:mt-4 leading-relaxed">
                {card.description}
              </p>
            </div>
            {index < processData.items.length - 1 && (
              <div class="hidden md:flex absolute top-1/2 right-[-56px] -translate-y-1/2 items-center">
                <div class="w-8 h-[2px] bg-[#CC0000]" />
                <div class="w-2 h-2 bg-[#CC0000] rounded-full" />
              </div>
            )}
            {index < processData.items.length - 1 && (
              <div class="md:hidden absolute left-1/2 bottom-[-32px] -translate-x-1/2 flex flex-col items-center">
                <div class="h-6 w-[2px] bg-[#CC0000]" />
                <div class="w-2 h-2 bg-[#CC0000] rounded-full" />
              </div>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
