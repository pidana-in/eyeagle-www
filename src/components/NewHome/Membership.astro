---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type MembershipItem = {
  title: string;
  description: string;
  image: ImageMetadata;
};

interface Props {
  items: MembershipItem[];
}

const { items } = Astro.props as Props;
---

<section class="bg-[#111827] text-white py-14 md:py-[160px] border-t">
  <!-- APPLE PAGE FRAME -->
  <div class="mx-auto w-full max-w-7xl px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row gap-12 md:gap-20 items-start">
      <!-- left column -->
      <div class="max-w-[374px] w-full">
        <h2
          class="text-2xl sm:text-3xl md:text-5xl font-bold leading-tight md:leading-[56px]"
        >
          What’s included in your membership
        </h2>

        <p class="text-sm sm:text-base opacity-70 mt-4 md:mt-6 leading-relaxed">
          EyEagle is more than a safety tool. You get a complete
          system—assessment, installation, protection, and alerts—personalized
          to your home and your family.
        </p>

        <a
          href="#"
          class="inline-block mt-6 md:mt-10 bg-[#CC0000] hover:bg-red-700
                 transition rounded-full px-6 py-3 text-sm font-medium"
        >
          Book a Safety Audit
        </a>
      </div>

      <!-- right grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 md:gap-8 w-full">
        {
          items.map((item) => (
            <div class="max-w-[320px] sm:max-w-none mx-auto sm:mx-0">
              <div class="rounded-xl overflow-hidden">
                <Image
                  src={item.image}
                  alt={item.title}
                  class="w-full h-auto object-cover"
                />
              </div>

              <h3 class="mt-4 md:mt-5 text-base md:text-lg font-semibold leading-6">
                {item.title}
              </h3>

              <p class="mt-2 md:mt-4 text-sm opacity-70 leading-relaxed">
                {item.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
