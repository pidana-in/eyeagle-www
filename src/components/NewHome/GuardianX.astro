---
import { Image } from "astro:assets";

type KitFeature = {
  title: string;
  description: string;
};

const kitFeatures = Astro.props.kitFeatures as KitFeature[];
const guardianData = Astro.props.guardianData;
---

<section class="bg-[#222222] text-white py-12 md:py-20">
  <div class="xl:container px-4 md:px-0">
    <div class="flex flex-col items-center text-center max-w-[720px] mx-auto">
      <div
        class="size-9 md:size-10 rounded-full bg-[#FBEBEB] text-[#CC0000] text-sm md:text-base font-bold flex items-center justify-center mb-4"
      >
        02
      </div>
      <h2 class="text-xl md:text-[40px] font-bold leading-tight mb-6">
        EyEagle<br />Guardian-X Kit
      </h2>
    </div>
    <div
      class="flex flex-col md:flex-row gap-8 md:gap-[120px] mt-12 md:mt-20 justify-evenly px-0 md:px-[120px]"
    >
      <div class="max-w-[722px]">
        <p
          class="text-lg md:text-xl font-medium leading-7 md:leading-8 mb-6 md:mb-8"
        >
          {guardianData.title}
        </p>
        <p class="text-base text-white opacity-70 leading-relaxed">
          {guardianData.desc}
        </p>
      </div>
      <div class="space-y-6">
        {
          kitFeatures.map((item) => (
            <div>
              <p class="font-medium text-lg md:text-xl leading-7">
                {item.title}
              </p>
              <p class="text-base font-normal text-white opacity-70 mt-2">
                {item.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
  <div class="pt-12 md:pt-20 xl:container px-4 md:px-0">
    <div class="flex justify-center">
      <Image
        src={guardianData.img}
        alt="EyEagle Guardian-X Kit components"
        class="w-full max-w-[480px] md:max-w-none"
        loading="lazy"
      />
    </div>
  </div>
  <div class="pt-12 md:pt-20 pb-10 flex justify-center bg-[#1F1F1F]">
    <a
      href="/device"
      class="rounded-full bg-[#CC0000] text-white px-6 py-3 text-sm font-medium hover:bg-red-700 transition"
    >
      Learn more
    </a>
  </div>
</section>
