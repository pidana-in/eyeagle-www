import { Image } from "astro:assets";
import BackupImage from "../../assets/NewApp/BackupImage.png"; 
---

<section class="py-20 px-6 flex justify-center xl:container">
  <div
    class="w-full max-w-[1280px] bg-white rounded-2xl overflow-hidden flex flex-col md:flex-row shadow-sm"
  >
    <!-- Left Content -->
    <div class="bg-[#FEF7EB] p-10 md:p-14 flex flex-col justify-center md:w-1/2">
      <p class="text-[#CC0000] text-sm font-semibold tracking-[3px] uppercase mb-4">
        Backup Emergency
      </p>

      <h2 class="text-[40px] font-bold leading-tight mb-4">
