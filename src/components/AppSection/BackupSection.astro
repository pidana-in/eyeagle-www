---
import { Image } from "astro:assets";

const backupSection = Astro.props.backupSection;
---

<section class="py-20 px-4 flex justify-center xl:container">
  <div
    class="w-full max-w-[1280px] bg-white rounded-2xl overflow-hidden flex flex-col md:flex-row shadow-sm"
  >
    <!-- Left Content -->
    <div class="bg-[#FEF7EB] p-6 md:p-14 flex flex-col justify-center md:w-1/2">
      <p
        class="text-[#CC0000] text-sm font-semibold tracking-[4px] uppercase mb-4"
      >
        {backupSection.eyebrow}
      </p>
      <h2 class="text-[30px] md:text-[40px] font-bold leading-tight mb-8">
        When your Nest canâ€™t<br />respond, we do
      </h2>
      <p class="text-[#000000] opacity-80 leading-relaxed mb-8">
        {backupSection.description}
      </p>
      <p class="flex gap-2 text-[#CC0000] text-sm italic md:mt-auto my-4">
        <!-- Red warning icon -->
        <svg
          class="w-4 h-4 flex-shrink-0"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <circle cx="12" cy="12" r="12" fill="#CC0000"></circle>
          <path
            d="M12 6v8"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"></path>
          <circle cx="12" cy="18" r="1.5" fill="white"></circle>
        </svg>
        <span>{backupSection.warning}</span>
      </p>
    </div>
    <!-- Right Image -->
    <div class="md:w-1/2">
      <Image
        src={backupSection.img}
        alt="Backup Image"
        class="w-full h-full object-cover md:rounded-r-2xl"
      />
    </div>
  </div>
</section>
