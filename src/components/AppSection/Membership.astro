---
import { Image } from "astro:assets";

const membershipContent = Astro.props.membershipContent;
const plans = Astro.props.plans;
---

<section class="xl:container px-4 py-20 md:px-[120px]">
  <div
    class="flex flex-col lg:flex-row justify-around items-center gap-14 lg:gap-[120px]"
  >
    <!-- Left Content -->
    <div class="max-w-[474px]">
      <p class="text-[#CC0000] text-xl font-medium mb-6">
        {membershipContent.eyebrow}
      </p>
      <h2 class="text-[32px] md:text-[44px] font-bold leading-none">
        {membershipContent.title}
      </h2>
      <button
        class="mt-[60px] bg-[#CC0000] text-white px-6 py-3 rounded-full text-lg font-medium hover:bg-red-700 transition"
      >
        {membershipContent.cta}
      </button>
    </div>
    <!-- Right Card -->
    <div class="bg-[#FEF7EB] shadow-md rounded-2xl p-8 md:max-w-[606px] w-full">
      <!-- Badge Row -->
      <div
        class="flex bg-white/90 tracking-widest backdrop-blur-sm shadow-md border border-gray-200 rounded-full py-2 px-3 w-fit"
      >
        <span
          class="flex items-center justify-center w-[115px] h-[38px] py-3 px-4 text-sm font-semibold text-gray-700 rounded-full"
        >
          {plans.badges[0]}
        </span>
        <span
          class="flex items-center justify-center w-[139px] h-[38px] py-3 px-4 text-sm font-semibold text-white bg-[#CC0000] rounded-full shadow-sm"
        >
          {plans.badges[1]}
        </span>
      </div>
      <h3 class="text-2xl font-bold leading-[1.4] tracking-normal mt-10 mb-3">
        {membershipContent.cardTitle}
      </h3>
      <p class="text-[#000000] text-lg mb-10 mt-4">
        {membershipContent.cardDescription}
      </p>
      <ul class="space-y-4 text-green-700 text-sm md:text-base">
        {
          plans.features.map((feature: any) => (
            <li class="flex gap-2">
              <Image
                src={membershipContent.image}
                alt="check"
                class="w-5 h-5 mt-1"
              />
              {feature}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
