---
import { Image } from "astro:assets";
import MainImage from "../../assets/Protection/MainImage.png";

const heroContent = {
  heading: {
    line1: "Safer support in the bathroom,",
    line2: "every single day.",
  },
  description:
    "A simple system of support bars, anti-skid mats and floor grip that quietly reduces slips and falls for seniors, recovery patients and anyone who feels unsteady on wet tiles.",
  imageAlt: "Bathroom safety support system",
};

const featurePoints = [
  "Stable sitâ€“stand support at the toilet",
  "Steady handholds around wet, slippery areas",
  "Discreet, clean look that suits most bathrooms",
];
---

<section class="bg-white py-36">
  <div class="xl:container">
    <!-- Text content -->
    <div class="justify-center text-center">
      <div class="mx-[120px] mb-20">
        <h2 class="text-3xl md:text-7xl font-bold leading-[80px]">
          {heroContent.heading.line1}
          <br class="hidden md:block" />
          {heroContent.heading.line2}
        </h2>
        <p class="text-xl opacity-[0.7] mt-12 px-2">
          {heroContent.description}
        </p>
      </div>

      <!-- Feature points -->
      <div
        class="flex flex-col md:flex-row justify-center items-center gap-8 text-xl font-medium"
      >
        {
          featurePoints.map((point, i) => (
            <>
              <span>{point}</span>
              {i !== featurePoints.length - 1 && (
                <span class="hidden md:inline text-[#CC0000]">|</span>
              )}
            </>
          ))
        }
      </div>
    </div>

    <!-- Image -->
    <div class="mt-16">
      <Image
        src={MainImage}
        alt={heroContent.imageAlt}
        class="w-full"
        loading="lazy"
      />
    </div>
  </div>
</section>
