---
import { Image } from "astro:assets";

type CTAItem = {
  text: string;
  icon: ImageMetadata;
};

const ctaContent = Astro.props.ctaContent;
const ctaData = Astro.props.ctaData;
---

<section class="xl:container py-20 md:px-[120px] px-4">
  <div
    class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center rounded-2xl border bg-[#F6F6F6] md:p-[60px] px-4 py-7"
  >
    <div class="max-w-[500px]">
      <p class="mb-2 text-black/60">{ctaContent.eyebrow}</p>
      <h2
        class="md:text-5xl text-[28px] font-bold leading-tight"
        set:html={ctaContent.title}
      />
      <p class="mt-4 max-w-md">
        {ctaContent.description}
      </p>
      <ul class="mt-8 space-y-3 text-xs uppercase tracking-wider">
        {
          ctaData.map((item: CTAItem) => (
            <li class="flex items-start gap-2">
              <Image src={item.icon} alt="" class="mt-1 size-4" />
              <span>{item.text}</span>
            </li>
          ))
        }
      </ul>
      <div class="mt-8 flex items-baseline gap-2">
        <span class="text-2xl font-bold">$300</span>
        <span class="text-sm">/ one-time payment</span>
      </div>
      <button
        class="mt-6 w-full max-w-[280px] rounded-full
               bg-[#CC0000] py-3 font-semibold text-white
               transition hover:bg-red-700"
      >
        Get Started
      </button>
    </div>
    <!-- RIGHT IMAGE / PLACEHOLDER -->
    <div class="h-[426px] max-w-[500px] rounded-lg bg-[#828282]"></div>
  </div>
</section>
