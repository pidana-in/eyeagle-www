---
import Icon from "../common/Icon.astro";
import { EyeagleDiff } from "../constants/aboutus";
---

<section class="bg-[#F6F4F2] px-5 lg:px-[40px] py-[100px]">
<div class="xl:container">
    <p set:html={EyeagleDiff.title} class="text-[40px] text-center leading-[44px] lg:eading-[48px] font-medium pb-[80px]"></p>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-[40px]">
        {EyeagleDiff.content.map((content)=>(
            <div class="flex flex-col gap-4 bg-white rounded-xl p-6">
                <Icon iconName={content.iconType} classNames="text-[#CC0000] text-[30px]" />
                <p class="leading-10 text-[20px] lg:text-[32px] font-medium">{content.title}</p>
                <p class="leading-7  text-[18px] lg:text-[20px] font-normal">{content.desc}</p>
            </div>
        ))}
    </div>
</div>
</section>