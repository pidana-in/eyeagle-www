---

import { Values } from "../constants/aboutus";
---
<section class="px-[80px] py-[100px] bg-[#F6F4F2] grid grid-cols-1 lg:grid-cols-2 gap-6 p-6">
  <div class="rounded-lg p-6">
    <h2 class="text-[40px] text-gray-800 mb-2 font-semibold">{Values[0].title}</h2>
    <p class="text-[18px]">{Values[0].description}</p>
  </div>
  <div class="grid grid-rows-3 gap-4">
    {Values.slice(1).map((value) => (
      <div class="rounded-lg p-6">
        <h2 class="text-[32px] font-semibold text-gray-800 mb-2">{value.title}</h2>
        <p class="text-[18px]">{value.description}</p>
      </div>
    ))}
  </div>
</section>
