---
import { banner2Contexts } from "../constants/manifesto";
import manifestoBanner2 from "../../assets/Manifesto/manifesto_banner_2.png";
import { Image } from "astro:assets";
---
<section class="h-auto font-sans-instrument sm:h-[991px] bg-[#F6F4F2] relative">
  <Image src={manifestoBanner2} class="h-[250px] sm:h-[653px] w-full object-cover" alt="Manifesto Banner" />
  <div class="lg:absolute bottom-10 sm:bottom-52 left-0 right-0 overflow-x-scroll sm:overflow-x-auto flex gap-6 sm:gap-10 px-4 sm:px-40 pt-10 lg:pt-0">
    {banner2Contexts.map((context) => (
      <div
        class="flex flex-col gap-3 p-6 sm:p-8 rounded-lg items-center justify-center bg-[#FFFFFFE5] max-h-auto sm:max-h-[306px] min-w-[280px] sm:max-w-[373px] shadow-md"
      >
        <p class="text-center text-sm sm:text-base">"{context?.description}"</p>
        <div class="w-[30px] h-[2px] bg-[#CC0000]"></div>
        <p class="text-center text-sm sm:text-base font-medium">{context?.author}</p>
      </div>
    ))}
  </div>
</section>
