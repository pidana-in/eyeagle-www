---
import BathroomSection from "./BathroomSection.astro";
interface Props {
    bathroomData:{
    id: number;
    heading: string;
    title: string;
    description: string;
    image: ImageMetadata;
}[],
productFeatureTitle:string
}
const bathroomData = Astro.props.bathroomData;
const productFeatureTitle = Astro.props.productFeatureTitle;
---

<section class="lg:py-[7.5rem] py-12 max-lg:px-4 px-20 xl:container">
    <div class="flex justify-center lg:px-10">
      <h2 set:html={productFeatureTitle} class="lg:text-5xl font-sans-instrument mb-8 leading-[2.75rem] lg:mx-10 text-[2rem] lg:leading-[3.75rem] font-medium text-center opacity-60">
      </h2>
    </div>
    <h1 class="font-medium text-[2rem] lg:text-5xl leading-[2.75rem] lg:leading-[3.75rem] text-center"><span class="text-primary">EyEagle</span> is built to protect your loved ones</h1>
    <div class="pt-20 grid lg:grid-cols-4 gap-12">
      {bathroomData?.map((item)=>
        <BathroomSection item={item} mobile={false}/>
      )}
    </div>
</section>