---
import BathroomSection from "./BathroomSection.astro";
interface Props {
    bathroomData:{
    id: number;
    heading: string;
    title: string;
    description: string;
    image: ImageMetadata;
}[],
productFeatureTitle:string
}
const bathroomData = Astro.props.bathroomData;
const productFeatureTitle = Astro.props.productFeatureTitle;
---

<section class="lg:py-[7.5rem] py-16 lg:px-20 px-4 max-xl:container bg-black">
    <div class="flex justify-start">
      <h2 set:html={productFeatureTitle} class="lg:text-[64px] font-sans-instrument mb-8 lg:my-20 leading-[2.75rem] text-[2rem] font-medium">
      </h2>
    </div>
    <div>
    <h3 class="text-[#A6A6A6] font-barlow font-semibold text-xl lg:text-[40px] lg:leading-[100%] mb-2 lg:mb-6">Not just a gadget â€” a complete care package.</h3>
    <h3 class="font-semibold font-barlow text-white text-xl lg:text-[40px] lg:leading-[100%]"><span class="text-primary">EyEagle</span> is built to keep your loved ones safe, 
      <span class="relative z-0">around the clock.
      <span class="absolute w-full h-2 bg-[#CC0000]/40 lg:top-9 lg:right-0 top-4 left-0 -z-50">
      </span>
    </span>
    </h3>
  </div>
    <div class="lg:pt-20 pt-8 grid grid-cols-2 gap-4 lg:grid-cols-4 lg:gap-8 justify-self-start">
      {bathroomData?.map((item)=>
        <BathroomSection item={item} mobile={false}/>
      )}
    </div>
</section>