---
import tick from "../../assets/Navbar/tick.png"
import { Image } from "astro:assets";
import kitImage1 from "../../assets/Navbar/kitItem1.png"
import kitImage2 from "../../assets/Navbar/kitItem2.png"
import kitImage3 from "../../assets/Navbar/kitItem3.png"
import kitImage4 from "../../assets/Navbar/kitItem4.png"
import kitImage5 from "../../assets/Navbar/kitItem5.png"
const ourTeam = Astro.props.item;
const ourTeamButton = Astro.props.ourTeamButton;
const ourTeamHeading1 = Astro.props.ourTeamHeading1;
const ourTeamHeading2 = Astro.props.ourTeamHeading2;
---
<section id="prevention" class="xl:container font-sans-instrument lg:px-10 px-4">
  <div class=" lg:py-[200px] max-lg:pt-20 max-lg:pb-10">
    <h2 class="text-[#CC0000] text-center font-medium text-[16px] lg:text-lg leading-[22px] mb-2">PREVENTION</h2>
        <h2 set:html={ourTeamHeading1} class="lg:text-[72px] xl:container font-sans-instrument leading-[44px] text-[32px] font-medium lg:font-normal lg:leading-[79px] text-center">
         
        </h2>
  </div>
  <div class="max-lg:pt-[100px]">
    <h3 class="font-normal text-[32px] lg:text-5xl leading-10 lg:leading-[67.2px] text-left mb-3">Top-Tier Quality,</h3>
    <h3 class="font-normal text-[32px] lg:text-5xl leading-10 lg:leading-[67.2px] opacity-60 text-left">Zero Compromise</h3>
    <div class="mt-4 flex max-lg:flex-col items-center lg:gap-[120px] gap-10 w-full">
      <h3 class="font-medium text-[16px] lg:text-[18px] text-left lg:text-lg leading-6 lg:leading-[28px] lg:w-[75%]">Providing essential support in high-risk areas, focus on preventing accidents in the first place by improving stability and reducing slip risks</h3>
      <div class="flex gap-20 items-center justify-start lg:justify-center">
        <div class="font-medium text-lg leading-[28px]">
          <Image src={tick} alt={"tick"}/>
          <p>Total Prevention Kit</p>          
        </div>
        <div class="font-medium text-lg leading-[28px]">
          <Image src={tick} alt={"tick"}/>
