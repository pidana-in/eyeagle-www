---
import { Image } from "astro:assets";
import { HandleSectionData } from "../constants/home";
---

<section id="installation" class="bg-white pt-[3.75rem] pb-[100px] lg:py-[7.5rem] px-5 lg:px-20 font-sans-instrument xl:container">
<div class="mb-[6.25rem]">
<p class="text-primary text-base lg:text-lg font-medium text-center">{HandleSectionData.title}</p>
<h2 class="lg:max-w-[85rem] font-medium text-[2.5rem] leading-[2.75rem] lg:leading-[4.5rem] lg:text-[3.75rem] m-auto text-center ">{HandleSectionData.subTitle1}</h2>
<h2 class="lg:max-w-[85rem] font-medium text-[2.5rem] leading-[2.75rem] lg:leading-[4.5rem] lg:text-[3.75rem] m-auto text-center ">{HandleSectionData.subTitle2}</h2>
</div>


    <div class="flex flex-col md:flex-row justify-center items-center gap-[5rem] bg-[#F0F0F0] p-[1.875rem] lg:p-[3.75rem] rounded-2xl">
        <div class="flex flex-col gap-[1.438rem]">
            {HandleSectionData.instructions.map((inst,index)=>(
                <div class="flex flex-col gap-3">
                <h3 class="font-medium text-[1.25rem] leading-[2.375rem] lg:text-3xl">{inst.title}</h3>
                <p class="text-lg font-normal leading-[1.375rem] lg:leading-7">{inst.desc}</p>
                <div class={`h-[1px] lg:mt-5 bg-[#D9D9D9] ${index===HandleSectionData.instructions.length-1 ? "hidden" : "block"}`}></div>
            </div>
        ))}
    </div>
    <div>
        <Image
        src={HandleSectionData.imgSrc}
        alt="emergencyBanner"
        />
    </div>
</div>
</section>