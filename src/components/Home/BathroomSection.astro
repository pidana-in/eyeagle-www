---
import { Image } from "astro:assets";

const item = Astro.props.item;
const mobile = Astro.props.mobile;
---
    <div class=`flex ${item.id%2 ===0 && "flex-row-reverse"} max-lg:flex-col md:grid-cols-2 max-lg:gap-4  gap-36 justify-evenly items-center`>
        <div class="lg:w-1/2">
            <Image
            src={item.image ?? ""}
            alt={'item.heading'}
            class="w-full bg-cover"
          />
        </div>
        <div class=`bg-white ${mobile && "max-lg:pb-20"} pt-8 lg:p-6 w-full lg:w-1/2`> 
          <h1 class="text-base max-lg:text-base font-sans-instrument font-medium lg:mb-2 text-red-600">
            {item.heading.toUpperCase()}
          </h1>
          <h2 class="text-3xl max-lg:py-3 max-lg:text-[32px] pb-4 font-sans-instrument max-lg:leading-10 font-semibold">
           {item.title}
          </h2>
          <h3 class="max-lg:text-lg font-sans-instrument max-lg:pt-4">
            {item.description}
          </h3>
        </div>
      </div>