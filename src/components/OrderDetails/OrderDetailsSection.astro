---
import OrderItemImage from "../../assets/Orders/OrderItemImage.png";
import { Image } from "astro:assets";
---

<div class="p-5 md:p-10">
  <div class="flex items-center justify-between">
    <h1 class="font-bold text-[20px] md:text-[28px] mb-[40px]">Order Details</h1>
    <div id="dropDown" class="mb-[40px]">
      <svg id="mySvg" class="md:hidden" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M4 9.99997C4 9.99997 6.94593 6 8 6C9.05413 6 12 10 12 10" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
    </div>
  </div>
  <section id="kitContent" class="w-full md:w-[40vw] p-5 md:p-10 bg-white rounded-3xl md:bg-[#F1EFED]">
    <div class="flex gap-5 items-center">
      <Image src={OrderItemImage} alt={"OrderItemImage"} class={"rounded-lg"} />
      <div>
        <h3 class="font-bold text-[20px]">Gold Plan Kit</h3>
        <p class="text-[18px] mt-2">The big size to stand on its own</p>
      </div>
    </div>
    <div class="bg-[#D9D9D9] h-[2px] w-full my-5"></div>
    <div>
      <h3 class="font-bold text-[20px]">Delivery Address</h3>
      <p class="text-[16px] mt-[20px]">Rehan | 7980125422</p>
      <p class="text-[16px] mt-3">HSR Layout, Harlur Road, Bangalore, Karnataka, India</p>
    </div>
  </section>
</div>

<script>
    const dropDown = document.getElementById("dropDown");
    const kitContent = document.getElementById("kitContent");
    const screenWidth= window.matchMedia("(max-width: 700px)");
    screenWidth.addEventListener("change",()=>{
     kitContent.style.display = `${kitContent.style.display === "none" ? "" : ""}`
    })
    
    dropDown?.addEventListener("click", () => {
      dropDown.style.transform = `${dropDown.style.transform === "rotate(180deg)" ? "" : "rotate(180deg)"}`;
      dropDown.style.transition = "transform 0.3s ease-in-out";
      kitContent.style.display = `${kitContent.style.display === "none" ? "" : "none"}`;
    });
  </script>
  